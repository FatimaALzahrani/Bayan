<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:background="#FFFFFF"
    tools:context=".HomeActivity">

    <!-- محتوى الشاشة الكامل -->
    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/bottom_navigation"
        android:padding="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="رجوع"
                android:focusable="true"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="التحويل"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:contentDescription="صفحة التحويل" />

            <TextView
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text=" إضافة "
                android:textSize="16sp"
                android:textColor="#3BB1F2"
                android:drawableStart="@drawable/plus_circle"
                android:padding="8dp"
                android:contentDescription="إضافة جهة اتصال جديدة"
                android:focusable="true"
                android:clickable="true" />
        </RelativeLayout>

        <!-- Favorites Section -->
        <TextView
            android:id="@+id/favoritesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="المفضلون"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"
            android:contentDescription="قسم المفضلين" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/favoritesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="32dp"
            android:contentDescription="قائمة جهات الاتصال المفضلة" />

        <!-- Transfer To Section -->
        <TextView
            android:id="@+id/transferTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تحويل إلى"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp"
            android:contentDescription="قسم التحويل" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/transferListRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:contentDescription="قائمة جهات الاتصال للتحويل" />
    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:menu="@menu/bottom_navigation_menu"
        app:itemIconTint="@color/bottom_nav_selected"
        app:itemTextColor="@color/bottom_nav_selected"
        app:elevation="8dp" />

</RelativeLayout>
