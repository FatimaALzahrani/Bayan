<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="#F5F5F5">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="رجوع"
            android:focusable="true"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="التحويل إلى مستفيد"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:contentDescription="صفحة تفاصيل التحويل" />

    </RelativeLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Amount Section -->
            <LinearLayout
                android:id="@+id/amountContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:background="@drawable/rounded_background"
                android:focusable="true"
                android:clickable="true"
                android:contentDescription="منطقة إدخال مبلغ التحويل، اضغط لإدخال المبلغ بالصوت">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مبلغ التحويل"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/transferAmountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="000.00"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#1B1750"
                        android:contentDescription="مبلغ التحويل" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rs_logo"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Current Balance -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="رصيدك الحالي"
                    android:textSize="16sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/currentBalanceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3,340.55"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:contentDescription="الرصيد الحالي" />

            </LinearLayout>

            <!-- Recipient Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_background"
                android:padding="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="المستلم"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/circle_avatar"
                        android:src="@drawable/ic_person"
                        android:scaleType="center"
                        android:layout_marginEnd="16dp"
                        android:backgroundTint="@color/orange_avatar" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/recipientNameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="أحمد محمد موسى الوهيبي"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="4dp"
                            android:contentDescription="اسم المستلم" />

                        <TextView
                            android:id="@+id/accountNumberTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1092 8736 1973 1234"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:contentDescription="رقم حساب المستلم" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Transfer Purpose -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الغرض من الحوالة"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_background"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp"
                android:focusable="true"
                android:clickable="true">

                <TextView
                    android:id="@+id/transferPurposeTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="حوالات شخصية"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:contentDescription="نوع الحوالة" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/caret_right"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="قائمة منسدلة" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:background="@drawable/button_primary"
        android:text="التالي"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:contentDescription="التالي، الانتقال إلى صفحة التأكيد"
        android:focusable="true"
        android:clickable="true" />

</LinearLayout>