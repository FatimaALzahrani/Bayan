<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layoutDirection="rtl">

        <!-- Transaction Icon with colored background -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp">

            <View
                android:id="@+id/icon_background"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/green_light" />

            <ImageView
                android:id="@+id/iv_transaction_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/cash"
                android:contentDescription="أيقونة نوع المعاملة" />

        </FrameLayout>

        <!-- Transaction Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_transaction_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="راتب شهر يونيو"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:contentDescription="وصف المعاملة" />

            <TextView
                android:id="@+id/tv_transaction_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="١٥ يونيو ٨:٣٠ ص"
                android:textSize="12sp"
                android:textColor="@color/gray_text"
                android:contentDescription="تاريخ ووقت المعاملة" />

        </LinearLayout>

        <!-- Transaction Amount -->
        <TextView
            android:id="@+id/tv_transaction_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 3,340.55 "
            android:drawableEnd="@drawable/rs_small"
            android:drawableTint="@color/green_light"
            android:textSize="12sp"
            android:textColor="@color/green_light"
            android:textStyle="bold"
            android:contentDescription="مبلغ المعاملة" />

        <!-- Hidden fields for internal use -->
        <TextView
            android:id="@+id/tv_transaction_category"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_transaction_type"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>