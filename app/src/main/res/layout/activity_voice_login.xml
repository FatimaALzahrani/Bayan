<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VoiceLoginActivity"
    android:layoutDirection="rtl"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/above"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:src="@drawable/above"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="#fff"
        app:cardCornerRadius="12dp"
        android:elevation="54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:id="@+id/text"
            android:layout_width="343dp"
            android:layout_height="23dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:text="التحقق عن طريق بصمة الصوت"
            android:textSize="18sp"
            android:textColor="#1B1750"
            android:gravity="center_horizontal|center_vertical"
            />

        <!--        <View-->
        <!--            android:id="@+id/group_10000"-->
        <!--            android:layout_width="187dp"-->
        <!--            android:layout_height="187dp"-->
        <!--            android:layout_alignParentLeft="true"-->
        <!--            android:layout_marginLeft="94dp"-->
        <!--            android:layout_alignParentTop="true"-->
        <!--            android:layout_marginTop="190dp"-->
        <!--            />-->

        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/circle"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/voice_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/microphone"
                android:layout_gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/text2"
            android:layout_width="343dp"
            android:layout_height="23dp"
            android:layout_marginTop="260dp"
            app:layout_constraintTop_toBottomOf="@id/text"
            android:text="قرّب هاتفك المحمول من فمك،"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#1B1750"
            android:gravity="center_horizontal|center_vertical"
            />

        <TextView
            android:id="@+id/text3"
            android:layout_width="343dp"
            android:layout_height="23dp"
            android:layout_marginTop="290dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@id/text"
            android:text="مع التأكد من سلامة النطق"
            android:textSize="14sp"
            android:textColor="#1B1750"
            android:gravity="center_horizontal|center_vertical"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="12dp"
        android:layout_margin="30dp"
        app:cardElevation="2dp"
        android:backgroundTint="@color/light_blue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/chart"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/voice_feedback_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="هنا يتم كتابة ما يقوله الصوت من التطبيق"
                android:textSize="14sp"
                android:textColor="@color/primary_blue" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/buttom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>