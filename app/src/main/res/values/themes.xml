<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Bayan" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/primary_blue</item>
        <item name="fontFamily">@font/tajawal_bold</item>
    </style>

    <style name="Theme.Bayan" parent="Base.Theme.Bayan" >
        <item name="fontFamily">@font/tajawal_bold</item>
    </style>
    <!-- Voice Tutorial Theme -->
    <style name="Theme.VoiceTutorial" parent="Base.Theme.Bayan">
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <!-- Large Text Style for Accessibility -->
    <style name="TextAppearance.App.Large" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/tajawal_bold</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!-- Voice Command Button Style -->
    <style name="Button.Voice" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/accent_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">28dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/white</item>
    </style>

    <!-- Accessibility Focus Style -->
    <style name="AccessibilityFocus">
<!--        <item name="android:background">@drawable/accessibility_focus_background</item>-->
        <item name="android:padding">4dp</item>
    </style>

    <!-- Voice Feedback Card Style -->
    <style name="Card.VoiceFeedback" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@color/accent_color</item>
        <item name="contentPadding">20dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>
</resources>